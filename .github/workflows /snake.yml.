name: Generate Snake

on:
  schedule:
    - cron: "0 0 * * *"  # اجرا در نیمه شب هر روز
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3  # استفاده از نسخه به‌روزتر checkout

      - name: Generate snake animation
        uses: Platane/snk@master
        with:
          github_user_name: "Jamshidi-Coding"
          output: dist/snake.svg  # فایل خروجی

      - name: Create output directory
        run: mkdir -p dist  # ایجاد پوشه خروجی در صورت نیاز

      - name: Move snake.svg to output
        run: mv dist/snake.svg .github/snake.svg  # انتقال فایل به مکان مناسب در پوشه .github

      - name: Push Snake to repository
        uses: ad-m/github-push-action@master
        with:
          branch: main  # ذخیره‌ی خروجی در شاخه اصلی
          force: true  # جایگزینی فایل در صورت موجود بودن
          file: .github/snake.svg  # نام فایل خروجی
